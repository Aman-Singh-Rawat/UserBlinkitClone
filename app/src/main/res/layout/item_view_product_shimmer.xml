<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product"
        android:layout_width="0dp"
        android:layout_height="@dimen/_260sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        android:elevation="0dp"
        android:layout_weight="1"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_13sdp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/iv_image_slider"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_130sdp"
                app:iss_auto_cycle="false"
                app:iss_text_align="center"
                android:background="#DDDDDD"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:background="#DDDDDD"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_quantity"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:layout_marginVertical="@dimen/_4sdp"
                android:textSize="@dimen/_15ssp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_15ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEdit"
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#DDDDDD"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/green"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product_two"
        android:layout_width="0dp"
        android:layout_height="@dimen/_260sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        android:elevation="0dp"
        android:layout_weight="1"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_13sdp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/iv_image_slider_two"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_130sdp"
                app:iss_auto_cycle="false"
                app:iss_text_align="center"
                android:background="#DDDDDD"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:background="#DDDDDD"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_quantity_two"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:layout_marginVertical="@dimen/_4sdp"
                android:textSize="@dimen/_15ssp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProductPrice_two"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_15ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEdit_two"
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#DDDDDD"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/green"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>